<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="rvizconfig" default="$(find smt_model_description)/launch/urdf.rviz"/>

  <node name="rviz" pkg="rviz" args="-d $(arg rvizconfig)" type="rviz" required="true"/>
  <include file="$(find smt_model_description)/launch/gazebo.launch"/>

  <node pkg="smt_controller" type="node" name="node" output="screen">
    <rosparam command="load" file="$(find smt_controller)/config/default.yaml" />
  </node>
</launch>
